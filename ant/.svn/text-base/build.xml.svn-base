  	     <exclude name="javax.servlet.jsp.jar"/>
  	  </fileset>
  	</copy>
  	  	
  	<!--
  	<copy toDir="${dist.webinf}/lib" flatten="true">
	 <fileset refid="required.libs" />
 	</copy>
  	
  	<copy toDir="${dist.dir}/conf" overwrite="true">
