  	<copy toDir="${dist.dir}" overwrite="true">
	 <fileset dir="${web.dir}">
	  <!--exclude name="templates/**"/-->
	  <include name="**"/>
	 </fileset>
  	</copy>
  </target>
  
  <target name="deploy.local" depends="package.dist, javadoc">
  	<echo message="Creating war file"/>
  	<antcall target="package.web"/>
  	
  	<!--
  	<echo message="Configure logging at ${tomcat.common.classes}"/>
  	<copy toDir="${tomcat.common.classes}" overwrite="true">
  	 <fileset dir="${conf.log}">
  	  <include name="log4j.xml"/>
  	 </fileset>
  	</copy>
  	-->
  	
  	<echo message="Deploying local tomcat instance at ${tomcat.webapps}"/>
  	<copy toDir="${tomcat.webapps}" overwrite="true">
  	 <fileset dir="${dist.dir}">
  	  <include name="${war.name}"/>
	 </fileset>
  	</copy>
  </target>
	
  <target name="javadoc" description="Generate Documentation">
		<echo message="Generating javadoc..."/>    
		<delete dir="${doc.dir}"/>
	    <mkdir dir="${doc.dir}"/>
	    <javadoc destdir="${doc.dir}" author="true" package="true" windowtitle="Power Management Service API Documentation" doctitle="Power Management Service API Documentation" header="Power Management Service &lt;br&gt; API Documentation" bottom="Copyright Â© 2012 &lt;a href='http://www.qcri.qa' target='_blank'&gt;QCRI&lt;/a&gt; | All Rights Reserved, Doha, Qatar." footer="Power Management Service &lt;br&gt; API Documentation" classpath="${classpath}">
	    	<packageset dir="${src.dir}" defaultexcludes="yes">
	    	</packageset>
        </javadoc>
  		<copy toDir="${dist.doc}" overwrite="true">
  		 <fileset dir="${doc.dir}"/>
  	  	</copy>
